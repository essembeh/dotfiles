[core]
	editor = vim
	pager = less
[fetch]
	prune = true
[pull]
	rebase = preserve
[push]
	default = simple
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	r = review -l -l
	b = branch -a -vv
	co = checkout
	s = status
	f = fetch --tags
	cp = cherry-pick
	ifind = !git ls-files | grep -i
	find = !git ls-files | grep
	undo = reset --soft HEAD^
	amend = commit --amend --date now
	commit-reusemessage = commit --reedit-message=HEAD --reset-author
	iw = commit --all --message='in work'
	spull = !git stash && git pull && git stash pop
	please = push --force-with-lease
[status]
	showUntrackedFiles = all
[url "git@github.com:"]
	pushInsteadOf = https://github.com/
