[core]
	editor = vim
	pager = less
[fetch]
	prune = true
[pull]
	rebase = merges
	autoStash = true
[rebase]
	autoStash = true
[push]
	default = simple
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	b = branch -a -vv
	co = checkout
	s = status
	f = fetch --tags --all
	cp = cherry-pick
	find = !git ls-files | grep -i
	undo = reset --soft HEAD^
	undo-hard = reset --hard HEAD^
	iw = commit --message='💩 DO NOT MERGE: in work'
	amend = commit --amend --date now --reset-author
	recommit = commit --reedit-message=HEAD --reset-author
	commit-release = commit -am '🔖 New release'
	commit-deps = commit -am '⬆️  Update dependencies' 
	please = push --force-with-lease
[status]
	showUntrackedFiles = all
