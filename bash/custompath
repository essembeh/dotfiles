__PATH_append () {
	test -d "$1" && [[ ! ":$PATH:" == *"$1"* ]] && export PATH="$PATH:$1"
}
__PATH_prepend () {
	test -d "$1" && [[ ! ":$PATH:" == *"$1"* ]] && export PATH="$1:$PATH"
}

__PATH_prepend "/usr/local/opt/coreutils/libexec/gnubin"
__PATH_append "/sbin"
__PATH_append "/usr/sbin"
__PATH_append "$HOME/dotfiles/bin"
__PATH_append "$HOME/dotfiles/bin/local"
__PATH_append "$HOME/dotfiles/3rdparty/script-utils/bin"
