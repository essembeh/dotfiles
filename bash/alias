# Aliases
alias ls="ls --color=auto"
alias ll="ls -hl"
alias llt="ll -rt"
alias la="ll -a"
alias l="ls -CFa"

alias du="du -hsl"
alias df="df -h"

alias diff="diff -u -r"
alias fax="tar vfax"
alias fac="tar vfac"

alias genpass="apg -a 0 -n1 -m 16 -M NCLS"
alias subdl="subdl.pl --force --noautosrt"
alias subdl2="subdl --site=tvnet"
alias freetv="vlc http://mafreebox.freebox.fr/freeboxtv/playlist.m3u"

alias last="last -n10"
alias tt="(tmux list-sessions && tmux a) || tmux"
alias g="git"
alias gg="mgit.sh"
alias f="fossil"

# Editor and Pager
__which() {
	which $1 > /dev/null 2>&1
} 
__which pydf && alias df=pydf
__which most && export PAGER=most
__which vim  && export EDITOR=vim
__which docker || alias docker="boot2docker ssh docker"
