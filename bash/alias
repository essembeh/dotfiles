# Aliases
alias ls="ls --color=auto"
alias ll="ls -hl"
alias llt="ll -rt"
alias la="ll -a"
alias l="ls -CFa"

alias du="du -hsl"
alias df="df -h"

alias diff="diff -u -r"
alias fax="tar vfax"
alias fac="tar vfac"

alias genpass="apg -a 0 -n1 -m 16 -M NCLS"
alias subdl="subdl.pl --force --noautosrt"
alias subdl2="subdl --site=tvnet"
alias freetv="vlc http://mafreebox.freebox.fr/freeboxtv/playlist.m3u"

alias last="last -n10"
alias tt="(tmux list-sessions && tmux a) || tmux"
alias g="git"
alias gg="mgit.sh"

# Editor and Pager
which dfc > /dev/null 2>&1 && alias df=dfc
which most > /dev/null 2>&1 && export PAGER=most
which vim > /dev/null 2>&1 && export EDITOR=vim

