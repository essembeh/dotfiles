mirrort () {
	RSYNC_ARGS=("-Prav")
	while [[ FOO$1 = FOO-* ]]; do
		RSYNC_ARGS+=("$1")
		shift
	done
	test $# -eq 1 || return 1
	rsync $RSYNC_ARGS "$PWD/" "$1:$PWD/"
}

mirrorf () {
	RSYNC_ARGS=("-Prav")
	while [[ FOO$1 = FOO-* ]]; do
		RSYNC_ARGS+=("$1")
		shift
	done
	test $# -eq 1 || return 1
	rsync $RSYNC_ARGS "$1:$PWD/" "$PWD/"
}
