# Aliases
alias ls="ls --color=auto"
alias ll="ls -hl"
alias llt="ll -rt"
alias lls="ll -rS"
alias la="ll -a"
alias l="ls -CFa"
alias du="du -hsl"
alias df="df -h"
alias diff="diff -u -r"
alias fac="tar vfac"
alias last="last -n10"
alias tt="(tmux list-sessions && tmux a) || tmux"
alias g="git"
alias gg="mgit.sh"
alias go="xdg-open"
alias aa="aria2c --file-allocation=none --summary-interval=0"
alias ai="sudo apt-get install"
alias au="sudo apt-get update && sudo apt-get dist-upgrade"

## Misc
alias genpass="head -c30 /dev/random | base64"
alias subdl="subdl.pl --force --noautosrt"
alias subdl2="subdl --site=tvnet"

# Editor and Pager
__which() {
	which $1 > /dev/null 2>&1
} 
__which pydf && alias df=pydf
__which most && export PAGER=most
__which vim  && export EDITOR=vim

