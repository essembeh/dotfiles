# Aliases
alias ls="ls --color=auto"
alias ll="ls -hl"
alias llt="ll -rt"
alias lls="ll -rS"
alias la="ll -a"
alias l="ls -CFa"

alias du="du -hsl"
alias df="df -h"

alias diff="diff -u -r"
alias fac="tar vfac"

alias genpass="head -c30 /dev/random | base64"
alias subdl="subdl.pl --force --noautosrt"
alias subdl2="subdl --site=tvnet"
alias freetv="vlc http://mafreebox.freebox.fr/freeboxtv/playlist.m3u"

alias last="last -n10"
alias tt="(tmux list-sessions && tmux a) || tmux"
alias g="git"
alias gg="mgit.sh"
alias f="fossil"

## APT
alias ai="sudo apt-get install"
alias au="sudo apt-get update && sudo apt-get dist-upgrade"

## Docker
dockertmp () {
	local DOCKER_IMAGE=${1-essembeh/jessie}
	docker run --rm -t -i \
		--hostname $(echo $DOCKER_IMAGE | tr -cd '[[:alnum:]]') \
		--volume $HOME:/target/home \
		--volume /tmp:/target/tmp \
		--volume $PWD:/target/pwd \
		--volume /tmp/.X11-unix/X0:/tmp/.X11-unix/X0 \
		--env DISPLAY=:0 \
		--workdir /target/pwd \
		$DOCKER_IMAGE
}

# Editor and Pager
__which() {
	which $1 > /dev/null 2>&1
} 
__which pydf && alias df=pydf
__which most && export PAGER=most
__which vim  && export EDITOR=vim
